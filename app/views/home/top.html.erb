<!-- メインビジュアル -->
<div class="main-visual">
    <div class="main-visual-content">
        <p class="main-visual-text">
          Water - the ocean - is our most natural environment.<br>
          We are born naked from the miniature ocean<br>
          of the mother's womb.
        </p>
        <p class="main-visual-name">
          ー Jacques Mayol ー
        </p>
    </div>
</div>

<div class="container">
    <div class="row">
      	<div class="col-md-8 col-sm-offset-2">

          <h2>Recent Post</h2>
          <% @posts.each do |post| %>
            <div class="block-image">
              <div class="view view-first">
                <%= link_to post_path(post.id) do %>
                  <%= attachment_image_tag post, :image, :fill, 200, 200 %>
                <% end %>
              </div>
            </div>

            <div class="block-content">
              <%#= image_tag(class: "img-circle pull-left profile-thumb") %>
              <h4 class="block-title">
                <%= link_to post_path(post.id) do %>
                <i class="fa fa-map-marker"></i><%= post.dive_point %>
                <% end %>
              </h4>
              <p><%= post.caption %></p>
              <ul class="inline-meta">
                <li>By
                  <%= post.user.name %>
                </li>
                <li>
                  <i class="fa fa-comment"></i>
                  <%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %>
                </li>
              </ul>
            </div>
          <% end %>

      	</div>
    </div>
</div>