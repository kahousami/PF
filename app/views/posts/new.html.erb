<div class="container">
  <div class="row">
    <div class="col-md-12">

        <div class="row">
          <div class="col-md-6 col-md-offset-3">

            <h3>投稿フォーム</h3>

            <%= form_for@post do |f| %>

              <% if @post.errors.any? %>
                <div id="error_explanation">
                  <h2><%= @post.errors.count %>件のエラーが発生しました。</h2>
                  <ul>
                  <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="row">
                <div class="col-sm-12">
                  <%= f.attachment_field :image %>
                </div>
              </div>

              <br>

              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                    <label class="control-label sr-only">ダイブポイント</label>
                    <%= f.text_field :dive_point, class:"form-control", placeholder:"ダイブポイント" %>
                  </div>
                </div>
                <div class="col-sm-6">
                </div>
              </div>

              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group">
                    <%= f.text_area :caption, class:"form-control", rows:"3", placeholder:"コメント" %>
                  </div>
                </div>
              </div>

              <%= f.submit "投稿", class:"btn btn-info btn-block" %>
            <% end %>

          </div>
        </div>

    </div>
  </div>
</div>