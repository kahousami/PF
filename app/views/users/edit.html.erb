<div class="container">
    <div class="row">
    	<div class="col-md-4 col-md-offset-4">

    		<h2 class="form-header-title">Edit Profile</h2>

			<%= form_for(@user) do |f| %>

			    <div class="form-group">
				    <div class="user-edit-image">
				        <%= attachment_image_tag @user, :profile_image, :fill, 120, 120, class: "img-circle", fallback: "noimage.jpg", size: '120x120' %>
				    </div>
				    <label class="control-label sr-only">ProfileImage</label>
				    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
				</div>

			    <div class="form-group">
			        <label class="control-label sr-only">名前</label>
			        <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"名前"%>
			    </div>

			    <div class="form-group">
			        <label class="control-label sr-only">email</label>
			        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"email"%>
			    </div>

			    <%= f.submit "変更を保存", class:"btn btn-ms btn-block" %>

			<% end %>

		</div>
	</div>
</div>